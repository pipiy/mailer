<div class="container">
	<%= link_to (image_tag ("back.png")), root_path %>
		<div align="center">
			<hr>
			<h1>Contact Us Page</h1>
			<%= form_for @contact, :url => {:action => :create} do |f| %>
				<% if @contact.errors.any? %>
					<h2>List of Errors:</h2>
					<ul><% @contact.errors.full_messages.each do |contact| %>
						<li><%= contact %></li></ul>
					<% end %>
				<% end %>		
								
			 <%= f.text_field :name, :class => "input-xlarge", :placeholder => "Full Name" %><br />
			 <%= f.text_field :email, :class => "input-xlarge", :placeholder => "Email" %><br />
			 <%= f.text_area :description, :class => "input-xlarge", :placeholder => "Yours message:", :cols => 35, :rows => "15" %>
			<br /><%= f.submit 'Send', :class => "btn btn-success" %>
			<% end %>
			<hr>
		</div>
	</div>
